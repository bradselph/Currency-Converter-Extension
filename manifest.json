{
  "name": "Currency Converter Extension",
  "description": "Automatically detects and converts currency values on web pages to your preferred target currency using reliable exchange rate APIs.",
  "version": "1.3.0",
  "author": "Brad Selph",
  "homepage_url": "https://github.com/bradselph/Currency-Converter-Extension",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://v6.exchangerate-api.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://latest.currency-api.pages.dev/*",
    "https://api.freecurrencyapi.com/*",
    "https://open.er-api.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Currency Converter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}